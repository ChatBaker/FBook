<div class="container">
  <div class="row">
  <div class="col-md-offset-3 col-md-6 col-sm-2 col-xs-3 ">
    <h2>ユーザー</h2>
      <% @users.each do |user| %>
        <div class="user_index">
          <% if user.id != current_user.id %>
          <div class"left"><%= profile_img(user) %></div>
          <div class="item">
            <p>NAME: <%= link_to user.name, user %></p>
            <p>E-Mail: <%= user.email %></p>
            <%= link_to 'メッセージ', conversations_path(sender_id: current_user.id, recipient_id: user.id), method: 'post'%>
            <%= render partial: 'follow_form', locals: { user: user } if signed_in?   %>
          </div>
          <% end %>
        </div>
      <% end %>
  </div>
  </div>
</div>
