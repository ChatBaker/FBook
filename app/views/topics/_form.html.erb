<div class="container">
 <div class="col-md-offset-3 col-md-6 col-sm-offset-3 col-sm-6">
  <%= form_for(@topic) do |f| %>
   <div id=new_article class="row">

    <% if @topic.errors.any? %>
      <div id="error_explanation">
       <h2><%= pluralize(@topic.errors.count, "error") %> prohibited this topic from being saved:</h2>
        <ul>
         <% @topic.errors.full_messages.each do |message| %>
          <li><%= message %></li>
         <% end %>
        </ul>
      </div>
    <% end %>

    <div class="new_content">
     <%= f.label :content,style: "display:none;" %><br>
     <%= f.text_field :content, placeholder: "今なにしてる？　　　　　　　　　　　　　　　内容60字までOK",class:"form-control"%>
    </div>
    <div class="image_uploader">
     <%= f.label :image,class: "glyphicon glyphicon-picture"%><br>
     <%= f.file_field :image,style: "display:none;" %>
     <% if @topic.image? %>
     <%= image_tag @topic.image.url %>
    </div>
    <% end %>
    <br>
    <div class="right">
      <%= f.submit "投稿" %>
    </div>
  </div>
 <% end %>
 </div>
</div>
