<div = class="container">
 <div class=row>
   <div class="wrapper col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">

    <thead>
      <h2>メッセージ一覧</h2>
    </thead>
    <div class="conversation_index">
     <% @conversations.each do |conversation| %>
       <% if conversation.target_user(current_user).present?%>
       <div class="conversation_index_list" >
         <%= link_to profile_img(conversation.target_user(current_user)),conversation_messages_path(conversation)%>
         <%= link_to conversation.target_user(current_user).name, conversation_messages_path(conversation)%>
         <% if conversation.target_message(current_user).present? %>
          <%= link_to conversation.target_message(current_user).last.body,conversation_messages_path(conversation)%>
         <% end %>
       </div>
       <%end %>
      <% end %>
    </div>
  </div>
  </div>
</div>
